{
    "phases": {
      "package": {
        "context": {
          "resources": {
            "url": "{HELM_CHART}",
            "path": "/stable/yugabyte"
          }
        },
        "actions": [
          {
            "action_id": "helm-package"
          },              
          {
            "action_id": "linter-packaging",
            "params": {
              "kind": "HELM"
            }
          }
        ]
      },
      "verify": {
        "context": {
          "resources": {
            "url": "{HELM_CHART}",
            "path": ".vib/"
          },
          "target_platform": {
            "target_platform_id": "7b13a7bb-011c-474f-ad71-8152fc321b9e",
            "size": {
              "name": "L8",
              "worker_nodes_instance_count": 3,
              "master_nodes_instance_count": 1
            }
          }
        },
        "actions": [
          {
            "action_id": "health-check",
            "params": {
              "endpoint": "lb-yb-master-ui-http-ui",
              "app_protocol": "HTTP"
            }
          },
          {
            "action_id": "goss",
            "params": {
              "resources": {
                "path": "/examples/yugabytedb/goss"
              },
              "config": {
                "remote": {
                  "workload": "sts-yb-tserver"
                },
                "wait": {
                  "file": "goss-wait.yaml"
                }
              }
            }
          },
          {
            "action_id": "resilience-tests"
          }
        ]
      }
    }
  }
  