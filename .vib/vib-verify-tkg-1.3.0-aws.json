      "package": {
        "context": {
          "resources": {
            "url": "{HELM_CHART}",
            "path": "/stable/yugabyte"
          }
        },
        "actions": [
          {
            "action_id": "helm-package"
          },              
          {
            "action_id": "linter-packaging",
